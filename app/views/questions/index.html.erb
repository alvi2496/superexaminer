<% if @questions.empty? %>
    <p>This test does not contain any questions</p>
<% else %>
    <table>
      <th>
        <tr>
          <td>Number</td>
          <td>Title</td>
          <td>Marks</td>
        </tr>
      </th>
      <tbody>
      <% @questions.each do |question| %>
          <tr>
            <td><%= question.number %></td>
            <td><%= question.title %></td>
            <td><%= question.mark %></td>
            <td>
              <%= link_to 'Show', question_path(question) %>
              <%= link_to 'Edit', edit_question_path(question) %>
              <%= link_to 'Delete', question_path(question), data: { method: :delete } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
<% if current_user.teacher? && (current_user.tests.include?(@test)) %>
    <%= link_to 'Add Questions', new_question_path(test_id: @test.id) %>
<% end %>